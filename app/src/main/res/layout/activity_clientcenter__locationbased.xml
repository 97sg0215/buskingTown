<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientCenterLocationBased">

    <RelativeLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="46.1dp"
        android:background="@color/mainPurple">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="#00000000"
            android:src="@drawable/backbtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="2sp"
            android:fontFamily="@font/kopubbold"
            android:text="위치기반 이용약관"
            android:textColor="#fff"
            android:textSize="17sp"/>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="46.1dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/conditionsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="-"
                    android:lineSpacingExtra="35sp"
                    android:textSize="13sp"
                    android:fontFamily="@font/kopubbold"
                    android:textColor="@color/fontBlack"/>

                <TextView
                    android:id="@+id/article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/conditionsTitle"
                    android:layout_marginTop="10dp"
                    android:text="- [-]"
                    android:lineSpacingExtra="35sp"
                    android:textSize="13sp"
                    android:fontFamily="@font/kopubbold"
                    android:textColor="@color/fontBlack"/>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/article"
                    android:layout_marginTop="10dp"
                    android:text="-"
                    android:lineSpacingExtra="7sp"
                    android:textSize="13sp"
                    android:fontFamily="@font/kopubmedium"
                    android:textColor="@color/fontBlack"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>