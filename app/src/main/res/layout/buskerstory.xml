<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/postingBusker"
            android:layout_width="match_parent"
            android:layout_height="42.6dp">

            <ImageView
                android:id="@+id/profileSmall"
                android:layout_width="22.5dp"
                android:layout_height="22.5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:src="@drawable/profile_small"/>

            <TextView
                android:id="@+id/main_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="busker_id"
                android:layout_toRightOf="@+id/profileSmall"
                android:layout_marginLeft="7.5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/fontBlack"
                android:textSize="12sp"
                android:lineSpacingExtra="1.5sp"
                android:fontFamily="@font/kopubbold" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/postingImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/sub2Gray"
            android:layout_below="@+id/postingBusker">
        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/postingInfor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/posting">

                <ImageButton
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"
                    android:src="@drawable/like_s"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/fontBlack"
                    android:fontFamily="@font/kopubmedium"
                    android:lineSpacingExtra="3sp"
                    android:text="- likes" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postingInfor">

                <TextView
                    android:id="@+id/buskerId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="10.5sp"
                    android:textColor="@color/fontBlack"
                    android:fontFamily="@font/kopubbold"
                    android:lineSpacingExtra="0.5sp"
                    android:text="busker_id"/>

                <TextView
                    android:id="@+id/postWriting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/buskerId"
                    android:layout_marginLeft="5dp"
                    android:textSize="8sp"
                    android:fontFamily="@font/kopubmedium"
                    android:textColor="@color/fontBlack"
                    android:lineSpacingExtra="-2sp"
                    android:text="-"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/postWriting"
                    android:textSize="8sp"
                    android:textColor="@color/fontGray"
                    android:fontFamily="@font/kopubmedium"
                    android:lineSpacingExtra="-2sp"
                    android:text="...더보기"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/post_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buskerId"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/kopubmedium"
                    android:lineSpacingExtra="-2sp"
                    android:text="-월 -일"
                    android:textColor="@color/fontGray"
                    android:textSize="5sp" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>