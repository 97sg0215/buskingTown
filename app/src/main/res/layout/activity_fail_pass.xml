<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".FailPass">

    <RelativeLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="46.1dp"
        android:background="@color/mainPurple">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backbtn"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버스커 승인 실패"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:fontFamily="@font/kopubbold"
            android:textSize="17sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/passContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusBar"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/sorryImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130.9dp"
            android:src="@drawable/sorry"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/failPassText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.3dp"
            android:layout_below="@+id/sorryImg"
            android:text="승인에 통과하지 못했어요."
            android:fontFamily="@font/kopubmedium"
            android:textColor="@color/mainPurple"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passContent"
        android:gravity="center">

        <View
            android:id="@+id/line"
            android:layout_width="23dp"
            android:layout_height="4dp"
            android:layout_marginTop="35.3dp"
            android:layout_below="@+id/loginBtn"
            android:background="@drawable/small_line"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:text="다시 도전하시겠어요?"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34.8dp"
            android:gravity="center"
            android:textColor="@color/fontBlack"
            android:fontFamily="@font/kopubdotummedium"
            android:textSize="12sp"/>
        
        <Button
            android:id="@+id/challenge"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_below="@+id/fail"
            android:text="다시 도전하기"
            android:fontFamily="@font/kopubdotumbold"
            android:textColor="#fff"
            android:background="@drawable/fail_btn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20.2dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp">

        <ImageView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/bt_image2" />

    </RelativeLayout>

</RelativeLayout>