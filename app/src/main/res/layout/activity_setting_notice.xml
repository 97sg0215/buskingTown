<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingNotice">

    <RelativeLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="46.1dp"
        android:background="@color/mainPurple">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="#00000000"
            android:src="@drawable/backbtn"
            android:onClick="previousActivity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:fontFamily="@font/kopubbold"
            android:textSize="17sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/noticeSettingInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_below="@+id/statusBar">

        <TextView
            android:id="@+id/noticeSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알림설정"
            android:textColor="@color/fontBlack"
            android:fontFamily="@font/kopubmedium"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:lineSpacingExtra="34sp"
            android:layout_marginTop="19dp"/>
        
        <Switch
            android:id="@+id/noticeSettingSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12.9dp"
            android:track="@drawable/switch_track_off"
            android:thumb="@drawable/switch_thumb_selector" />

        <View
            android:id="@+id/noticeSettingUnderLine"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/sub2Gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/noticeSetting"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addReceiveLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:layout_below="@+id/noticeSettingInformation">

        <TextView
            android:id="@+id/eventReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이벤트 소식 받기"
            android:textSize="14sp"
            android:textColor="@color/fontBlack"
            android:fontFamily="@font/kopubmedium"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="34sp"/>

        <Switch
            android:id="@+id/eventReceiveSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12.9dp"
            android:track="@drawable/switch_track_off"
            android:thumb="@drawable/switch_thumb_selector" />

        <View
            android:id="@+id/eventReceiveUnderLine"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@color/sub2Gray"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/eventReceive"/>

        <TextView
            android:id="@+id/addReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="광고 수신 여부"
            android:textColor="@color/fontBlack"
            android:textSize="14sp"
            android:fontFamily="@font/kopubmedium"
            android:lineSpacingExtra="34sp"
            android:layout_marginTop="19.5dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/eventReceiveUnderLine"/>

        <Switch
            android:id="@+id/addReceiveSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12.9dp"
            android:layout_below="@id/eventReceiveUnderLine"
            android:track="@drawable/switch_track_off"
            android:thumb="@drawable/switch_thumb_selector" />

        <View
            android:id="@+id/addReceiveUnderLine"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/sub2Gray"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/addReceive"/>

    </RelativeLayout>

</RelativeLayout>