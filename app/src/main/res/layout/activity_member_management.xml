<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MemberManagement">

    <RelativeLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="46.1dp"
        android:background="@color/mainPurple">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backbtn"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팀원 관리"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:fontFamily="@font/kopubbold"
            android:textSize="17sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusBar"
        android:gravity="center">

        <ImageView
            android:id="@+id/sorry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="154.1dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/sorry"/>

        <TextView
            android:id="@+id/sorrytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.3dp"
            android:lineSpacingExtra="3sp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/sorry"
            android:text="아직 초대 된 멤버가 없군요. \n멤버를 초대해서 팀을 만드세요"
            android:fontFamily="@font/kopubmedium"
            android:textColor="@color/mainPurple"
            android:textSize="15sp" />

        <View
            android:id="@+id/line"
            android:layout_width="23dp"
            android:layout_height="4dp"
            android:layout_marginTop="14.3dp"
            android:layout_below="@+id/sorrytext"
            android:background="@drawable/small_line"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/inviteBtn"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_below="@+id/line"
            android:text="멤버 초대하기"
            android:fontFamily="@font/kopubdotumbold"
            android:textColor="#fff"
            android:background="@drawable/fail_btn"
            android:lineSpacingExtra="-5sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47.4dp"/>

        <ImageView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/bt_image2"/>

    </RelativeLayout>

</RelativeLayout>