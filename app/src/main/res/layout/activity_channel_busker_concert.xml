<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ChannelBuskerConcert">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/concertTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전체보기"
                            android:textSize="15sp"
                            android:textColor="@color/fontBlack"
                            android:fontFamily="@font/kopubbold"
                            android:layout_marginTop="25.2dp"
                            android:layout_marginLeft="20dp"/>

                        <ImageButton
                            android:id="@+id/filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/filter"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="26.2dp"
                            android:background="#fff" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/concertText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="준비된 콘서트가 없습니다."
                            android:layout_marginTop="75dp"
                            android:gravity="center_vertical"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/kopubdotummedium"
                            android:textColor="@color/fontBlack"
                            android:textSize="14sp"/>

                        <LinearLayout
                            android:id="@+id/concertContainer"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        </LinearLayout>

                </RelativeLayout>

        </LinearLayout>

</FrameLayout>