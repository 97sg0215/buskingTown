<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/payBtn"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp">

                    <TextView
                        android:id="@+id/teamName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/fontBlack"
                        android:lineSpacingExtra="23sp"
                        android:text="팀 이름" />

                    <EditText
                        android:id="@+id/teamNameHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/teamName"
                        android:textSize="12sp"
                        android:lineSpacingExtra="23sp"
                        android:hint="팀 이름을 입력해주세요."
                        android:textColorHint="@color/subGray"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="5dp"
                        android:inputType="text"
                        android:fontFamily="@font/kopubmedium"
                        android:background="#00000000"/>

                    <View
                        android:id="@+id/teamnameUnderLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.9dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/teamNameHint"
                        android:background="@color/transPurple"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp">

                    <TextView
                        android:id="@+id/phoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/fontBlack"
                        android:lineSpacingExtra="23sp"
                        android:text="휴대폰" />

                    <EditText
                        android:id="@+id/phoneNumberHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/phoneNumber"
                        android:textSize="12sp"
                        android:lineSpacingExtra="23sp"
                        android:hint="휴대폰 번호를 정확히 입력해주세요."
                        android:textColorHint="@color/subGray"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="5dp"
                        android:inputType="text"
                        android:fontFamily="@font/kopubmedium"
                        android:background="#00000000"/>

                    <View
                        android:id="@+id/phoneNumberUnderLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.9dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/phoneNumberHint"
                        android:background="@color/transPurple"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/fontBlack"
                        android:lineSpacingExtra="23sp"
                        android:text="이메일" />

                    <EditText
                        android:id="@+id/emailHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email"
                        android:textSize="12sp"
                        android:lineSpacingExtra="23sp"
                        android:hint="이메일을 양식에 맞게 정확히 입력해주세요."
                        android:textColorHint="@color/subGray"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="5dp"
                        android:inputType="text"
                        android:fontFamily="@font/kopubmedium"
                        android:background="#00000000"/>

                    <View
                        android:id="@+id/emailUnderLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.9dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/emailHint"
                        android:background="@color/transPurple"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp">

                    <TextView
                        android:id="@+id/publicContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/fontBlack"
                        android:lineSpacingExtra="23sp"
                        android:text="홍보 내용" />

                    <EditText
                        android:id="@+id/publicContentHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/publicContent"
                        android:textSize="12sp"
                        android:lineSpacingExtra="23sp"
                        android:hint="ex) 팀 이름, 노래, 콘서트, 길거리 공연 한 가지만 선택가능"
                        android:textColorHint="@color/subGray"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="5dp"
                        android:inputType="text"
                        android:fontFamily="@font/kopubmedium"
                        android:background="#00000000"/>

                    <View
                        android:id="@+id/publicContentUnderLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.9dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/publicContentHint"
                        android:background="@color/transPurple"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp">

                    <TextView
                        android:id="@+id/imageAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/fontBlack"
                        android:lineSpacingExtra="23sp"
                        android:text="이미지 첨부" />

                    <EditText
                        android:id="@+id/imageaddHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageAdd"
                        android:textSize="12sp"
                        android:lineSpacingExtra="23sp"
                        android:hint="홍보에 사용 될 팀 사진을 올려주세요."
                        android:textColorHint="@color/subGray"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="5dp"
                        android:inputType="text"
                        android:fontFamily="@font/kopubmedium"
                        android:background="#00000000"/>

                    <ImageView
                        android:id="@+id/Img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/attachment"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>

                    <View
                        android:id="@+id/imageAddUnderLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.9dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/imageaddHint"
                        android:background="@color/transPurple"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp">

                    <TextView
                        android:id="@+id/publicDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/fontBlack"
                        android:lineSpacingExtra="23sp"
                        android:text="원하는 홍보 날짜" />

                    <EditText
                        android:id="@+id/publicDateHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/publicDate"
                        android:textSize="12sp"
                        android:lineSpacingExtra="23sp"
                        android:hint="공지사항을 숙지하고 선택해주세요."
                        android:textColorHint="@color/subGray"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="5dp"
                        android:inputType="text"
                        android:fontFamily="@font/kopubmedium"
                        android:background="#00000000"/>

                    <ImageView
                        android:id="@+id/dateImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/date"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>

                    <View
                        android:id="@+id/publicDateUnderLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.9dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/publicDateHint"
                        android:background="@color/transPurple"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp">

                    <TextView
                        android:id="@+id/requriement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/fontBlack"
                        android:lineSpacingExtra="23sp"
                        android:text="요구사항" />

                    <EditText
                        android:id="@+id/requriementHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/requriement"
                        android:textSize="12sp"
                        android:lineSpacingExtra="23sp"
                        android:hint="100자 이내"
                        android:textColorHint="@color/subGray"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="5dp"
                        android:inputType="text"
                        android:fontFamily="@font/kopubmedium"
                        android:background="#00000000"/>

                    <View
                        android:id="@+id/requriementUnderLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.9dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/requriementHint"
                        android:background="@color/transPurple"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>

