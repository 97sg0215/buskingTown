                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:background="@drawable/profile_border"
                                android:src="@drawable/profile"
                                android:layout_marginTop="15dp" />

                            <TextView
                                android:id="@+id/buskerIdFifth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="10.5sp"
                                android:textColor="@color/fontBlack"
                                android:layout_marginTop="5dp"
                                android:lineSpacingExtra="1sp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/kopubmedium"
                                android:layout_below="@id/buskerProfileImangeFifth"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/buskerChannelSixth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp">

                            <ImageView
                                android:id="@+id/buskerProfileImangeSixth"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:background="@drawable/profile_border"
                                android:src="@drawable/profile"
                                android:layout_marginTop="15dp" />

                            <TextView
                                android:id="@+id/buskerIdSixth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="10.5sp"
                                android:textColor="@color/fontBlack"
                                android:layout_marginTop="5dp"
                                android:lineSpacingExtra="1sp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/kopubmedium"
                                android:layout_below="@id/buskerProfileImangeSixth"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/buskerChannelSeventh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp">

                            <ImageView
                                android:id="@+id/buskerProfileImangeSeventh"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
