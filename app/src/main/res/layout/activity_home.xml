                                android:layout_marginTop="5dp"
                                android:lineSpacingExtra="1sp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/kopubmedium"
                                android:layout_below="@id/buskerProfileImangeEighth"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/buskerChannelNinth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp">

                            <ImageView
                                android:id="@+id/buskerProfileImangeNinth"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:background="@drawable/profile_border"
                                android:src="@drawable/profile"
                                android:layout_marginTop="15dp" />

                            <TextView
                                android:id="@+id/buskerIdNinth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="10.5sp"
                                android:textColor="@color/fontBlack"
                                android:layout_marginTop="5dp"
                                android:lineSpacingExtra="1sp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/kopubmedium"
                                android:layout_below="@id/buskerProfileImangeNinth"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/buskerChannelTenth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp">

                            <ImageView
                                android:id="@+id/buskerProfileImangeTenth"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:background="@drawable/profile_border"
                                android:src="@drawable/profile"
                                android:layout_marginTop="15dp" />

                            <TextView
                                android:id="@+id/buskerIdTenth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="10.5sp"
                                android:textColor="@color/fontBlack"
                                android:layout_marginTop="5dp"
                                android:lineSpacingExtra="1sp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/kopubmedium"
                                android:layout_below="@id/buskerProfileImangeTenth"/>

                        </RelativeLayout>

                    </LinearLayout>

                </HorizontalScrollView>
                    
                    <RelativeLayout
                        android:id="@+id/liveBusker"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/cityback">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIVE 중인 버스커가 없습니다."
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/fontGray"
                            android:textSize="14sp"
                            android:fontFamily="@font/kopubmedium"/>

                    </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/goingConcert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="다가오는 콘서트"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/kopubbold"
                            android:textColor="@color/fontBlack"
                            android:textSize="15sp"
                            android:lineSpacingExtra="-8.5sp"
                            android:layout_marginTop="27.5dp"/>
                        
                        <TextView
                            android:id="@+id/readyConcert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="준비된 콘서트가 없습니다."
                            android:textColor="@color/fontGray"
                            android:layout_marginTop="112.9dp"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/buskerStory"
                        android:layout_width="match_parent"
                        android:layout_height="390dp"
                        android:layout_marginTop="87.1dp"
                        android:background="@color/mainGray">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/kopubbold"
                            android:text="나의 버스커 스토리"
                            android:textColor="@color/fontBlack"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/buskerStoryNone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="147dp"
                            android:fontFamily="@font/kopubmedium"
                            android:lineSpacingExtra="7sp"
                            android:gravity="center"
                            android:text="아직 버스커의 팬이 되지 않았나요?\n 같이 찾아봐요 :)"
                            android:textColor="@color/fontGray"
                            android:textSize="14sp" />

                        <Button
                            android:layout_width="190dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/buskerStoryNone"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25.1dp"
                            android:background="@drawable/fail_btn"
                            android:fontFamily="@font/kopubbold"
                            android:text="좋아하는 버스커 찾기"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                    </RelativeLayout>

