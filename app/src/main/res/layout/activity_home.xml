<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="46.1dp"
            android:background="@color/mainPurple">

            <ImageButton
                android:layout_width="114dp"
                android:layout_height="19dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13.5dp"
                android:background="@drawable/logo"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/statusBar"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/banner"
                    android:layout_width="wrap_content"
                    android:layout_height="175dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/subGray"/>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal">

                        <Button
                            android:id="@+id/alignLeftButton"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:background="@drawable/able_circle"
                            android:layout_marginTop="157dp" />

                        <Button
                            android:id="@+id/leftButton"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:background="@drawable/enable_circle"
                            android:layout_marginTop="157dp"
                            android:layout_alignLeft="@+id/alignLeftButton"
                            android:layout_marginLeft="5dp"/>

                        <Button
                            android:id="@+id/centerButton"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:background="@drawable/enable_circle"
                            android:layout_marginTop="157dp"
                            android:layout_alignLeft="@+id/leftButton"
                            android:layout_marginLeft="5dp"/>

                        <Button
                            android:id="@+id/rightButton"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:background="@drawable/enable_circle"
                            android:layout_marginTop="157dp"
                            android:layout_alignLeft="@+id/centerButton"
                            android:layout_marginLeft="5dp"/>

                        <Button
                            android:id="@+id/alignRightButton"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:background="@drawable/enable_circle"
                            android:layout_marginTop="157dp"
                            android:layout_alignLeft="@+id/rightButton"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/dayStandard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/topTen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top 10"
                            android:textSize="15sp"
                            android:textColor="@color/fontBlack"
                            android:fontFamily="@font/kopubbold"
                            android:lineSpacingExtra="2sp"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:id="@+id/day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/topTen"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="7.5dp"
                            android:lineSpacingExtra="1sp"
                            android:fontFamily="@font/kopubmedium"
                            android:text="일간 기준"
                            android:textColor="@color/mainYellow"
                            android:textSize="15sp"/>

                    </RelativeLayout>

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/buskerChannelFirst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp">

                            <ImageView
                                android:id="@+id/buskerProfileImangeFirst"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:background="@drawable/profile_border"
                                android:src="@drawable/profile"
                                android:layout_marginTop="15dp" />

                            <TextView
                                android:id="@+id/buskerIdFirst"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="10.5sp"
                                android:textColor="@color/fontBlack"
                                android:layout_marginTop="5dp"
                                android:lineSpacingExtra="1sp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/kopubmedium"
                                android:layout_below="@id/buskerProfileImangeFirst"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/buskerChannelSecond"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp">

                            <ImageView
                                android:id="@+id/buskerProfileImangeSecond"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:background="@drawable/profile_border"
                                android:src="@drawable/profile"
                                android:layout_marginTop="15dp" />

                            <TextView
                                android:id="@+id/buskerIdSecond"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="10.5sp"
