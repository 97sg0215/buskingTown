<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/reservationInfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/reservationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/fontBlack"
            android:fontFamily="@font/kopubbold"
            android:lineSpacingExtra="-7.5sp"
            android:text="0000.00.00"/>

        <TextView
            android:id="@+id/reservationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reservationDate"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/fontGray"
            android:fontFamily="@font/kopubmedium"
            android:lineSpacingExtra="-6.5sp"
            android:text="00:00~00:00" />

        <TextView
            android:id="@+id/reservationLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/mainPurple"
            android:fontFamily="@font/kopubmedium"
            android:lineSpacingExtra="-7.5sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="-"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:layout_marginBottom="14dp"
        android:layout_below="@id/reservationInfor"
        android:layout_alignParentBottom="true"
        android:background="@color/sub2Gray" />

</RelativeLayout>