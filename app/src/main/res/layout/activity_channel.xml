<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Channel"
    android:background="#ffffff">


    <RelativeLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="46.1dp"
        android:background="@color/mainPurple">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backbtn"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="busker_id"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:fontFamily="@font/kopubbold"
            android:textSize="17sp"/>

        <ImageButton
            android:id="@+id/morebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="#00000000"
            android:src="@drawable/more"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statusBar"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/buskerRelative"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profilebig"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24.9dp"
                    android:src="@drawable/profile_big"/>

                <TextView
                    android:id="@+id/buskerId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profilebig"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/kopubbold"
                    android:lineSpacingExtra="2sp"
                    android:text="my_id_name"
                    android:textColor="@color/fontBlack"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buskerId"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/kopubmedium"
                    android:lineSpacingExtra="1.5sp"
                    android:text="#건대 #발라드 #케이팝 #인디 #기타"
                    android:textColor="@color/mainPurple"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@id/buskerRelative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tag"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp">

                    <ImageView
                        android:id="@+id/smile"
                        android:layout_width="10.5dp"
                        android:layout_height="10.5dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/smile"/>

                    <TextView
                        android:id="@+id/smileCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="7.5dp"
                        android:layout_marginRight="12.5dp"
                        android:layout_toRightOf="@+id/smile"
                        android:fontFamily="@font/kopubmedium"
                        android:lineSpacingExtra="1sp"
                        android:text="0"
                        android:textColor="@color/fontBlack"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/line"
                        android:layout_width="1dp"
                        android:layout_height="12dp"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@+id/smileCount"
                        android:background="@color/subGray" />

                    <ImageView
                        android:id="@+id/coin"
                        android:layout_width="10.5dp"
                        android:layout_height="10.5dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12.5dp"
                        android:layout_marginStart="12.5dp"
                        android:src="@drawable/coin" />


                    <TextView
                        android:id="@+id/coinAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="8.5dp"
                        android:layout_marginRight="12.5dp"
                        android:layout_toRightOf="@+id/coin"
                        android:fontFamily="@font/kopubmedium"
                        android:lineSpacingExtra="1sp"
                        android:text="0개"
                        android:textColor="@color/fontBlack"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/lineTwo"
                        android:layout_width="1dp"
                        android:layout_height="12dp"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@+id/myCoint"
                        android:background="@color/subGray" />

                    <ImageView
                        android:id="@+id/chart"
                        android:layout_width="10.5dp"
                        android:layout_height="10.5dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/chart"/>

                    <TextView
                        android:id="@+id/chartRank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.5dp"
                        android:layout_toRightOf="@+id/chart"
                        android:fontFamily="@font/kopubmedium"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="1sp"
                        android:text="-위"
                        android:textColor="@color/fontBlack"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/box"
                android:layout_width="match_parent"
                android:layout_height="57.6dp"
                android:layout_weight="1"
                android:layout_gravity="center">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/sub2Gray" />

                <ImageView
                    android:id="@+id/board"
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="89dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/board" />

                <ImageView
                    android:id="@+id/calendar"
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="89dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/calendar"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/sub2Gray" />

            </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/schedule"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/box">

                <ImageView
                    android:id="@+id/date"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/date"/>

                <TextView
                    android:id="@+id/dateSe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/date"
                    android:fontFamily="@font/kopubbold"
                    android:text="일 정"
                    android:textColor="@color/fontBlack"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23dp"
                    android:layout_toRightOf="@+id/dateSe"
                    android:fontFamily="@font/kopubmedium"
                    android:lineSpacingExtra="1.5sp"
                    android:text="앞으로의 일정이 없습니다."
                    android:textColor="@color/fontBlack"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.9dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/sub2Gray" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/concert"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/schedule">

                <ImageView
                    android:id="@+id/ticket"
                    android:layout_width="12dp"
                    android:layout_height="9.6dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ticket"/>

                <TextView
                    android:id="@+id/concertCo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/ticket"
                    android:fontFamily="@font/kopubbold"
                    android:text="콘서트"
                    android:textColor="@color/fontBlack"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/concertCo"
                    android:fontFamily="@font/kopubmedium"
                    android:lineSpacingExtra="1.5sp"
                    android:text="진행중인 콘서트가 없습니다."
                    android:textColor="@color/fontBlack"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.9dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/sub2Gray" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/buskerPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="106.7dp"
                    android:layout_marginLeft="106.3dp"
                    android:layout_marginTop="66.6dp"
                    android:text="첫 게시물을 작성해보세요!"
                    android:fontFamily="@font/kopubdotummedium"
                    android:textSize="14sp"
                    android:lineSpacingExtra="-5sp"
                    android:gravity="center_vertical" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

