<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    tools:context=".PromoteRecommend">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp">

                    <TextView
                        android:id="@+id/teamName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/fontBlack"
                        android:lineSpacingExtra="23sp"
                        android:text="팀 이름" />

                    <EditText
                        android:id="@+id/teamNameHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/teamName"
                        android:textSize="12sp"
                        android:lineSpacingExtra="23sp"
                        android:hint="팀 이름을 입력해주세요."
                        android:textColorHint="@color/subGray"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="5dp"
                        android:inputType="text"
                        android:fontFamily="@font/kopubmedium"
                        android:background="#00000000"/>

                    <View
                        android:id="@+id/teamnameUnderLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.9dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/teamNameHint"
                        android:background="@color/transPurple"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp">

                    <TextView
                        android:id="@+id/phoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/fontBlack"
                        android:lineSpacingExtra="23sp"
                        android:text="휴대폰" />

                    <EditText
                        android:id="@+id/phoneNumberHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/phoneNumber"
                        android:textSize="12sp"
                        android:lineSpacingExtra="23sp"
                        android:hint="휴대폰 번호를 정확히 입력해주세요."
                        android:textColorHint="@color/subGray"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="5dp"
                        android:inputType="phone"
                        android:fontFamily="@font/kopubmedium"
                        android:background="#00000000"/>

                    <View
                        android:id="@+id/phoneNumberUnderLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.9dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/phoneNumberHint"
                        android:background="@color/transPurple"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/fontBlack"
                        android:lineSpacingExtra="23sp"
                        android:text="이메일" />

                    <EditText
                        android:id="@+id/emailHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email"
                        android:textSize="12sp"
                        android:lineSpacingExtra="23sp"
                        android:hint="이메일을 양식에 맞게 정확히 입력해주세요."
                        android:textColorHint="@color/subGray"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="5dp"
                        android:inputType="text"
                        android:fontFamily="@font/kopubmedium"
                        android:background="#00000000"/>

                    <View
                        android:id="@+id/emailUnderLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.9dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/emailHint"
                        android:background="@color/transPurple"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/publicDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/fontBlack"
                        android:lineSpacingExtra="23sp"
                        android:text="원하는 홍보 날짜" />

                    <EditText
                        android:id="@+id/publicDateHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/publicDate"
                        android:textSize="12sp"
                        android:lineSpacingExtra="23sp"
                        android:hint="공지사항을 숙지하고 선택해주세요."
                        android:textColorHint="@color/subGray"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="5dp"
                        android:inputType="text"
                        android:fontFamily="@font/kopubmedium"
                        android:background="#00000000"/>

                    <ImageView
                        android:id="@+id/dateImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/date"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>

                    <View
                        android:id="@+id/publicDateUnderLine"
                        android:layout_width="match_parent"
                        android:layout_height="0.9dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/publicDateHint"
                        android:background="@color/transPurple"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:paddingBottom="39dp">

                    <TextView
                        android:id="@+id/allprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="100dp"
                        android:text="합 계"
                        android:textColor="@color/fontBlack"
                        android:fontFamily="@font/kopubdotumbold"
                        android:textSize="15sp"
                        android:layout_marginTop="16.5dp"/>

                    <TextView
                        android:id="@+id/won"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toLeftOf="@+id/allprice"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="12dp"
                        android:textSize="21sp"
                        android:fontFamily="@font/kopubdotumbold"
                        android:textColor="@color/fontBlack"
                        android:text="-"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toLeftOf="@+id/won"
                        android:layout_marginTop="19dp"
                        android:layout_marginRight="4.5dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/kopubdotummedium"
                        android:text="원"
                        android:textColor="@color/fontBlack"/>

                </RelativeLayout>

            </LinearLayout>

    <Button
        android:id="@+id/paymentBtn"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:text="결 제"
        android:fontFamily="@font/kopubbold"
        android:textSize="14sp"
        android:textColor="#fff"
        android:lineSpacingExtra="-3.5sp"
        android:background="@color/mainPurple"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>


</FrameLayout>