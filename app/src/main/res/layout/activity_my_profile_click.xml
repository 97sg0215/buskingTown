<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainGray"
    tools:context=".MyProfileClick">

    <RelativeLayout
        android:id="@+id/memberProfile"
        android:layout_width="match_parent"
        android:layout_height="224.5dp"
        android:background="@color/mainPurple">

        <ImageButton
            android:id="@+id/clearBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_d"
            android:background="#00000000"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="15dp" />


        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="59.5dp"
            android:src="@drawable/profile_big"/>

        <TextView
            android:id="@+id/buskerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileImg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/kopubbold"
            android:lineSpacingExtra="2sp"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buskerId"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/kopubmedium"
            android:lineSpacingExtra="36sp"
            android:text="멤버"
            android:textColor="@color/mainYellow"
            android:textSize="12sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/memberProfile"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53.5dp">

            <TextView
                android:id="@+id/phoneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="연락처"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="1.5sp"
                android:textSize="14sp"
                android:fontFamily="@font/kopubbold"
                android:textColor="@color/fontBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/phoneNum"
                android:layout_marginLeft="25dp"
                android:text="-"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="1.5sp"
                android:textSize="14sp"
                android:fontFamily="@font/kopubmedium"
                android:textColor="@color/fontBlack" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:background="@color/sub2Gray"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53.5dp">

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="이메일"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="1.5sp"
                android:textSize="14sp"
                android:fontFamily="@font/kopubbold"
                android:textColor="@color/fontBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/email"
                android:layout_marginLeft="25dp"
                android:text="-"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="1.5sp"
                android:textSize="14sp"
                android:fontFamily="@font/kopubmedium"
                android:textColor="@color/fontBlack" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:background="@color/sub2Gray"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53.5dp">

            <TextView
                android:id="@+id/memberDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="팀 탈퇴하기"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="1.5sp"
                android:textSize="14sp"
                android:fontFamily="@font/kopubbold"
                android:textColor="@color/subPink" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:background="@color/sub2Gray"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>