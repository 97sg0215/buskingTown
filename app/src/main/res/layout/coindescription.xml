<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/dealDate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <TextView
            android:id="@+id/coindate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/fontBlack"
            android:fontFamily="@font/kopubbold"
            android:lineSpacingExtra="-7.5sp"
            android:text="0000.00.00"/>
        <TextView
            android:id="@+id/cointext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coindate"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/fontGray"
            android:fontFamily="@font/kopubmedium"
            android:lineSpacingExtra="-6.5sp"
            android:text="-" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dealcoin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/fontGray"
            android:fontFamily="@font/kopubmedium"
            android:lineSpacingExtra="-6.5sp"
            android:text="-" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/balance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/fontGray"
            android:fontFamily="@font/kopubmedium"
            android:lineSpacingExtra="-6.5sp"
            android:text="-" />
    </RelativeLayout>

</LinearLayout>