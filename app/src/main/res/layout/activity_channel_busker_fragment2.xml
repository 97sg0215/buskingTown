<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    tools:context=".Channel_busker_fragment2">

    <FrameLayout
        android:id="@+id/buskerFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/roadConcert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46.5dp"
            android:layout_marginTop="15.2dp"
            android:lineSpacingExtra="2sp"
            android:text="거리공연"
            android:textColor="@color/mainYellow"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/practiceRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="15.2dp"
            android:lineSpacingExtra="2sp"
            android:text="연습실"
            android:textColor="@color/fontBlack"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/contacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="15.2dp"
            android:lineSpacingExtra="2sp"
            android:text="콘서트장"
            android:textColor="@color/fontBlack"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:id="@+id/fragmentView"
        android:layout_width="60dp"
        android:layout_height="2.5dp"
        android:layout_marginTop="44.7dp"
        android:layout_marginLeft="43.5dp"
        android:background="@color/mainYellow" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buskerFrame"
        android:background="@drawable/add"
        android:layout_marginTop="25.2dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add"
        android:layout_centerHorizontal="true"
        android:text="새로운 거리공연 예약"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/kopubdotummedium"
        android:textColor="@color/fontGray"
        android:textSize="14sp"
        android:lineSpacingExtra="1.5sp"/>

</RelativeLayout>