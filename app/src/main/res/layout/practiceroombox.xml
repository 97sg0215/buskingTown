<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/practiceroom_box"
    android:layout_width="match_parent"
    android:layout_height="252.5dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lendImage"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="@color/subGray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="87.5dp"
            android:background="@color/mainGray">

            <TextView
                android:id="@+id/practiceroomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/kopubbold"
                android:textSize="14sp"
                android:textColor="@color/fontBlack"
                android:lineSpacingExtra="1.5sp"
                android:text="-"/>

            <TextView
                android:id="@+id/practiceroomAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/practiceroomName"
                android:layout_marginTop="7.5dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/kopubmedium"
                android:textSize="10.5sp"
                android:textColor="@color/fontBlack"
                android:lineSpacingExtra="1sp"
                android:text="-"/>

            <TextView
                android:id="@+id/practiceroomPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/practiceroomAddress"
                android:layout_marginTop="7.5dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/kopubmedium"
                android:textSize="14sp"
                android:textColor="@color/fontBlack"
                android:lineSpacingExtra="-1sp"
                android:text="-"/>

            <ImageButton
                android:id="@+id/practiceRoomDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                android:background="#00000000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>