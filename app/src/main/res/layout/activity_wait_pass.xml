<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".WaitPass">

    <RelativeLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="46.1dp"
        android:background="@color/mainPurple">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backbtn"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버스커 승인 대기"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:fontFamily="@font/kopubbold"
            android:textSize="17sp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusBar"
        android:gravity="center">

        <ImageView
            android:id="@+id/thankyouImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130.9dp"
            android:src="@drawable/thankyou"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.3dp"
            android:layout_below="@+id/thankyouImg"
            android:text="관리자의 승인을 기다려주세요."
            android:fontFamily="@font/kopubmedium"
            android:textColor="@color/mainPurple"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"/>

        <View
            android:id="@+id/line"
            android:layout_width="23dp"
            android:layout_height="4dp"
            android:layout_marginTop="35.3dp"
            android:layout_below="@+id/approve"
            android:background="@drawable/small_line"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/adminApprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:lineSpacingExtra="9sp"
            android:text="관리자 승인은 약 2~3일이 소요되며, \n버스커가 되면 자동으로 채널이 생성됩니다. \n승인이 완료되면 알림이 울리니 확인해주세요 :)"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34.8dp"
            android:gravity="center"
            android:textColor="@color/fontBlack"
            android:fontFamily="@font/kopubdotummedium"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="91.2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/bt_image2" />

    </RelativeLayout>

</RelativeLayout>