<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainPurple</item>
        <item name="colorPrimaryDark">@color/subPurple</item>
        <item name="colorAccent">@color/fontBlack</item>

        <item name="android:statusBarColor">@color/mainPurple</item>

        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- 데이트피커 테마 지정 -->
    <style name="DatePickerSpinner">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/fontBlack</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/mainPurple</item>
    </style>

</resources>
